<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MultiplayerTicTacToe.Appshell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MultiplayerTicTacToe.View"
    Shell.FlyoutBehavior="Disabled">

    <Shell.Resources>
        <ResourceDictionary>
            <Style x:Key="BaseStyle" TargetType="Element">
                <Setter Property="Shell.BackgroundColor" Value="{StaticResource Primary}"/>
                <Setter Property="Shell.ForegroundColor" Value="{OnPlatform WinUI={StaticResource Primary}, Default=White}"/>
            </Style>
            <Style BasedOn="{StaticResource BaseStyle}" TargetType="ShellItem" ApplyToDerivedTypes="True"/>
        </ResourceDictionary>
    </Shell.Resources>

    <TabBar>
        <ShellContent Route="Game" Title="Play" Icon="Game.png" ContentTemplate="{DataTemplate local:GamePage}"/>
        <ShellContent Route="HiScore" Title="HiScore" Icon="Hiscore.png" ContentTemplate="{DataTemplate local:HiScorePage}"/>
        <ShellContent Route="Player" Title="Players" Icon="Player.png" ContentTemplate="{DataTemplate local:PlayerPage}"/>
    </TabBar>

</Shell>
